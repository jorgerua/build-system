{
  "name": "worker-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/worker-service",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go build -o ../../dist/apps/worker-service/worker-service",
        "cwd": "apps/worker-service"
      },
      "outputs": ["{workspaceRoot}/dist/apps/worker-service"],
      "dependsOn": ["^build"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go test -v -coverprofile=coverage.out ./...",
        "cwd": "apps/worker-service"
      },
      "dependsOn": ["build"]
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go run main.go",
        "cwd": "apps/worker-service"
      },
      "dependsOn": ["^build"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go vet ./...",
        "cwd": "apps/worker-service"
      }
    }
  },
  "tags": ["type:app", "scope:worker"],
  "implicitDependencies": ["shared", "nats-client", "git-service", "nx-service", "image-service", "cache-service"]
}
